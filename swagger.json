{
  "openapi": "3.0.0",
  "info": {
      "version": "1.0.0",
      "title": "Local Biz",
      "description": "Documentação OAS 3.0"
  },
  "servers": [
      {
          "url": "http://localhost:5000",
          "description": "HTTP (local)"
      }
  ],
  "tags":[
    {
      "name": "Registration",
      "description": "New user registration form"
    },
    {
      "name": "Free",
      "description": "Available for non-registered users"
    },
    {
      "name": "User",
      "description": "Requests feitas pelos usuários"
    }
  ],
  "paths": {
    "/register": {
      "post": {
        "tags": ["Registration"],
        "summary": "Register user",
        "description": "",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "surname": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad request"
          },
          "403": {
            "description": "Forbidden"
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": ["User"],
        "summary": "Initiate session",
        "description": "",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "202": {
            "description": "Accepted"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/users/:id": {
      "get": {
        "tags": ["User"],
        "summary": "Details user",
        "description": "",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "description": "JWT",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "403": {
            "description": "Not your own profile"
          }
        }
      },
      "delete": {
        "tags": ["User"],
        "summary": "Delete own account",
        "description": "",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "description": "JWT",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No content"
          }, 
          "403": {
            "description": "Not your own profile"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/users/:id/businesses": {
      "get": {
        "tags": ["User"],
        "summary": "View user's businesses",
        "description": "",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "description": "JWT",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#components/schemas/business"
                }
              }
            }
          }
        }
      }
    },
    "/business/new": {
      "post": {
        "tags": ["User"],
        "summary": "Register business",
        "description": "",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "description": "JWT",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "business_name": {
                    "type": "string"
                  },
                  "phone": {
                    "type": "string"
                  },
                  "social": {
                    "type": "string"
                  },
                  "cep": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad request"
          },
          "403": {
            "description": "Forbidden"
          }
        }
      }
    },
    "/cities": {
      "get": {
        "tags": ["Free"],
        "summary": "List available cities",
        "description": "",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "city": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/:city/neighborhoods": {
      "get": {
        "tags": ["Free"],
        "summary": "List available cities",
        "description": "",
        "parameters": [
          {
            "in": "path",
            "name": "city",
            "required": true,
            "description": "City name",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "city": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Not found"
          }
        }
      }
    },
    "/:city/:neighborhood/": {
      "get": {
        "tags": ["Free"],
        "summary": "View businesses in specified region",
        "description": "",
        "parameters": [
          {
            "in": "path",
            "name": "city",
            "description": "The city, as registered in the database",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "path",
            "name": "neighborhood",
            "description": "The neighborhood, as registered in the database",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#components/schemas/business"
                }
              }
            }
          },
          "404": {
            "description": "Not found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "business": {
        "properties": {
          "id": {
            "type": "integer"
          },
          "business_name": {
            "type": "string"
          },
          "phone": {
            "type": "string"
          },
          "social": {
            "type": "string"
          },
          "cep": {
            "type": "string"
          },
          "state": {
            "type": "string"
          },
          "city": {
            "type": "string"
          },
          "street": {
            "type": "string"
          },
          "number": {
            "type": "string"
          }
        }
      }
    }
  }
}
