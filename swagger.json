{
  "openapi": "3.0.0",
  "info": {
      "version": "1.0.0",
      "title": "Local Biz",
      "description": "Documentação OAS 3.0"
  },
  "servers": [
      {
          "url": "http://localhost:5000",
          "description": "HTTP (local)"
      }
  ],
  "tags":[
    {
      "name": "User",
      "description": "Requests feitas pelos usuários"
    }
  ],
  "paths": {
    "/register": {
      "post": {
        "tags": ["User"],
        "summary": "Register user",
        "description": "",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "surname": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },

          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "example": "Campo obrigatório: ${campo}"
                }
              }
            }
          },

          "403": {
            "description": "Forbidden",
            "content": {
              "application/json": {
                "schema": {
                  "example": "Email já cadastrado!"
                }
              }
            }
          }
        }
      }
    }
  }
}